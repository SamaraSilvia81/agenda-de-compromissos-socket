{
  "name": "Agenda de Compromissos",

  // Aponta para o seu Dockerfile
  "build": {
    "dockerfile": "../Dockerfile"
  },

    // >>> ADICIONE ESTA SEÇÃO AQUI <<<
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  // Configurações para o VS Code DENTRO do contêiner
  "customizations": {
    "vscode": {
      // Instala extensões úteis automaticamente no contêiner
      "extensions": [
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  
  // Executa um comando depois que o contêiner é criado
  "postCreateCommand": "yarn install",

  // Redireciona uma porta do contêiner para a sua máquina (se o app rodar na porta 3000)
  "forwardPorts": [3000]
}